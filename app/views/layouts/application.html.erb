  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Todo-App</a>
    </div>
  </div>
<div class="container">
  <%= render 'layouts/navigation' %>
  <%= render 'layouts/messages' %>
<%= yield %>
</div> <!-- /container -->
</body>
</html>
